---
import "../styles/layouts/WorkLayout.scss";
import CarouselComponent from "../components/CarouselComponent";
---

<section id="work">
  <h1 class="title" style="margin-top: 150px;">Nosso portifólio</h1>
  <h2 class="subtitle">Venha para cá você também</h2>
  <section class="carousel">
    <article class="carousel-container">
      <CarouselComponent />
    </article>
    <div class="btn-container">
      <a href="http://new-studio21.vercel.app" target="_blank" rel="noopener noreferrer"><button class="btn">Acesse o site</button></a>
      <div class="arrow-container">
        <button class="arrow"
          ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <path
              d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"
            ></path></svg
          ></button
        >
        <p class="counter">
          1<span style="transform: translateY(-20%);">.</span>1
        </p>
        <button class="arrow"
          ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
            ><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
            <path
              d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"
            ></path></svg
          ></button
        >
      </div>
    </div>
  </section>
  <button class="btn btn-blue">Veja todo o portifólio</button>
</section>
